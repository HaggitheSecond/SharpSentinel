<UserControl x:Class="SharpSentinel.UI.Controls.TextBlockWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SharpSentinel.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="Root">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding ElementName=Root, Path=Label}" 
                   Margin="0,0,10,0"
                   FontWeight="Bold"/>
        <TextBlock Text="{Binding ElementName=Root, Path=Value}" />
    </StackPanel>
</UserControl>
